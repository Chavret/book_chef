<div class="container">
  <div class="rows">
    <div class="col-xs-12 col-md-6 col-md-offset-3 text-center">
      <h1 class="home_title">Create new meal</h1>
      <%= simple_form_for @meal do |f| %>
        <% if @meal.errors.any? %>
          <div id="error_explanation text-center">
          <ul>
            <% @meal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
          </div>
        <% end %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :food_type, collection: Meal::FOOD_TYPE %>
        <%= f.input :price %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.button :submit, class: "btn btn-red" %>
      <% end %>
    </div>
  </div>
</div>
