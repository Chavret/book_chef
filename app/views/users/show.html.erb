




<div class="container">
  <div class="row">
    <div class="booking-content">
      <div class=" col-sm-10">
        <h2>Bookings</h2>
        <table class = "table">
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
            <th>Meal</th>
            <th>Number of customers</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody >
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.user.email %></td>
              <td><%= booking.date %></td>
              <td><%= booking.meal.name %></td>
              <td><%= booking.number_customers %></td>
              <td><%= link_to 'Show', booking, class: "btn btn-primary" %></td>
              <td><%= link_to 'Validate', edit_booking_path(booking), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', meal_booking_path(@user, booking),class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
        <%= link_to 'Go back home',  root_path, :class => "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>

<br>


