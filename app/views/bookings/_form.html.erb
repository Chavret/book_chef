

<div class="container ">
   <div class="row">
      <div class="col-sm-offset-4 col-sm-4">

        <%= simple_form_for [@booking] do |f| %>
          <%= f.error_notification %>

            <%= f.input :date, type: "text", input_html: { class: 'datepicker' }%>
            <%= f.input :number_customers, collection: Booking::NOCUSTOMERS %>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
    </div>
  </div>
</div>




