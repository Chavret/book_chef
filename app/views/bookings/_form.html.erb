<div class="form-banner">

  <div class="container">
    <h1 class="thin-title text-center"> Make a <span>sweet sweet</span> booking <h1>
  </div>

  <div class="container text-center">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">

        <%= simple_form_for [meal, booking] do |f| %>

          <% if @booking.errors.any? %>
            <div id="error_explanation text-center">
              <ul>
                <% @booking.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.input :date, type: "text", label: "When is the Feast?", input_html: { class: 'datepicker' } %>
          <%= f.input :number_customers, label: "How many of you will enjoy it?", collection: Booking::NOCUSTOMERS %>
          <div class="search-form">
            <%= f.submit "Book Now!", class: "btn-red" %>
          </div>
          <%= link_to 'back to meals', meals_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>



